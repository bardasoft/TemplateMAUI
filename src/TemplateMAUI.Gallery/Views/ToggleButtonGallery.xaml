<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="TemplateMAUI.Gallery.Views.ToggleButtonGallery"
    xmlns:controls="clr-namespace:TemplateMAUI.Controls;assembly=TemplateMAUI"
    BarBackgroundColor="{AppThemeBinding Dark={StaticResource DarkNavBarBackgroundColor}, Light={StaticResource LightNavBarBackgroundColor}}"
    BarTextColor="White"
    Title="ToggleButton Gallery">
    <ContentPage
        Title="Getting Started"
        IconImageSource="started.png">
        <ContentPage.Content>
            <VerticalStackLayout
                Padding="12">
                <controls:ToggleButton
                    RippleColor="White"
                    Background="Gray"
                    ToggledBackground="SkyBlue"
                    TextColor="White"
                    ToggledTextColor="Black"
                    Content="ToggleButton" />
                <controls:ToggleButton
                    RippleColor="White"
                    Background="Gray"
                    ToggledBackground="DarkOliveGreen">
                    <controls:ToggleButton.Content>
                        <Grid
                            RowDefinitions="*, Auto">
                            <Image 
                                HorizontalOptions="Center"
                                HeightRequest="100"
                                Aspect="AspectFit"
                                Source="before.jpg"/>
                            <Label 
                                Grid.Row="1"
                                HorizontalOptions="Center"
                                TextColor="WhiteSmoke"
                                Text="Using a View"/>
                        </Grid>
                    </controls:ToggleButton.Content>
                </controls:ToggleButton>
            </VerticalStackLayout>
        </ContentPage.Content>
    </ContentPage>
    <ContentPage  
        Title="Customization"
        IconImageSource="customize.png">
        <ContentPage.Content>
            <VerticalStackLayout
                Padding="12">
                <Label 
                    Text="Gradients"/>
                <controls:ToggleButton
                    RippleColor="White"
                    TextColor="White"
                    ToggledTextColor="Black"
                    BorderBrush="DeepSkyBlue"
                    ToggledBorderBrush="Red"
                    BorderThickness="2"
                    Content="Gradients">
                    <controls:ToggleButton.Background>
                        <LinearGradientBrush>
                            <LinearGradientBrush.GradientStops>
                                <GradientStop 
                                    Color="DeepSkyBlue"
                                    Offset="0.1"/>
                                <GradientStop 
                                    Color="SkyBlue"
                                    Offset="0.9"/>
                            </LinearGradientBrush.GradientStops>
                        </LinearGradientBrush>
                    </controls:ToggleButton.Background>
                    <controls:ToggleButton.ToggledBackground>
                        <LinearGradientBrush>
                            <LinearGradientBrush.GradientStops>
                                <GradientStop 
                                    Color="Orange"
                                    Offset="0.1"/>
                                <GradientStop 
                                    Color="OrangeRed"
                                    Offset="0.9"/>
                            </LinearGradientBrush.GradientStops>
                        </LinearGradientBrush>
                    </controls:ToggleButton.ToggledBackground>
                </controls:ToggleButton>
                <Label 
                    Text="Custom Border"/>
                <controls:ToggleButton
                    RippleColor="White"
                    Background="Gray"
                    ToggledBackground="SkyBlue"
                    TextColor="White"
                    ToggledTextColor="Black"
                    BorderThickness="6"
                    Content="Custom Border">
                    <controls:ToggleButton.BorderBrush>
                        <LinearGradientBrush>
                            <LinearGradientBrush.GradientStops>
                                <GradientStop 
                                    Color="DeepSkyBlue"
                                    Offset="0.1"/>
                                <GradientStop 
                                    Color="SkyBlue"
                                    Offset="0.9"/>
                            </LinearGradientBrush.GradientStops>
                        </LinearGradientBrush>
                    </controls:ToggleButton.BorderBrush>
                </controls:ToggleButton>
                <Label 
                    Text="CornerRadius"/>
                <controls:ToggleButton
                    CornerRadius="24"
                    RippleColor="White"
                    Background="Gray"
                    ToggledBackground="SkyBlue"
                    TextColor="White"
                    ToggledTextColor="Black"
                    BorderBrush="SkyBlue"
                    BorderThickness="2"
                    Content="Custom Border" />
                <Label 
                    Text="Custom RippleColor"/>
                <controls:ToggleButton
                    RippleColor="DarkBlue"
                    Background="Gray"
                    ToggledBackground="SkyBlue"
                    TextColor="White"
                    ToggledTextColor="Black"
                    BorderBrush="SkyBlue"
                    BorderThickness="2"
                    Content="Custom Border" />
            </VerticalStackLayout>
        </ContentPage.Content>
    </ContentPage>
    <ContentPage
        Title="Events"
        IconImageSource="customize.png">
        <ContentPage.Content>
            <VerticalStackLayout
                Padding="12">
                <controls:ToggleButton
                    RippleColor="White"
                    Background="Gray"
                    ToggledBackground="SkyBlue"
                    TextColor="White"
                    ToggledTextColor="Black"
                    Content="ToggleButton"
                    IsToggledChanged="OnIsToggledChanged"/>
            </VerticalStackLayout>
        </ContentPage.Content>
    </ContentPage>
</TabbedPage>